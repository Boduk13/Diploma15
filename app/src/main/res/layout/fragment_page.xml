<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/no_photo"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"/>


        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:alpha=".7"
            android:orientation="vertical"
            android:background="@drawable/greybackground">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_weight="2"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="Ім'я водія:"
                    android:textSize="25dp"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/abc_primary_text_disable_only_material_light"
                    android:layout_marginRight="5dp" />
                <EditText
                    android:id="@+id/firstName"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:hint="Кінець маршруту"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/abc_primary_text_disable_only_material_light"
                    android:layout_marginLeft="5dp"
                    android:editable="false"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_weight="2"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="Прізвище водія:"
                    android:textSize="25dp"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/abc_primary_text_disable_only_material_light"
                    android:layout_marginRight="5dp" />
                <EditText
                    android:id="@+id/lastName"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:hint="@string/lastName"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/abc_primary_text_disable_only_material_light"
                    android:layout_marginLeft="5dp"
                    android:editable="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_weight="2"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="E-Mail:"
                    android:textSize="25dp"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/abc_primary_text_disable_only_material_light"
                    android:layout_marginRight="5dp" />
                <EditText
                    android:id="@+id/mail"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:hint="@string/mail"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/abc_primary_text_disable_only_material_light"
                    android:layout_marginLeft="5dp"
                    android:editable="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_weight="2"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="Телефон:"
                    android:textSize="25dp"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/abc_primary_text_disable_only_material_light"
                    android:layout_marginRight="5dp" />
                <EditText
                    android:id="@+id/phone"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:hint="@string/phone"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/abc_primary_text_disable_only_material_light"
                    android:layout_marginLeft="5dp"
                    android:editable="false"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_weight="2"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="Адреса:"
                    android:textSize="25dp"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/abc_primary_text_disable_only_material_light"
                    android:layout_marginRight="5dp" />
                <EditText
                    android:id="@+id/adress"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:hint="@string/adress"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/abc_primary_text_disable_only_material_light"
                    android:layout_marginLeft="5dp"
                    android:editable="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_weight="2"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="Вік:"
                    android:textSize="25dp"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/abc_primary_text_disable_only_material_light"
                    android:layout_marginRight="5dp" />
                <EditText
                    android:id="@+id/age"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:hint="@string/age"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/abc_primary_text_disable_only_material_light"
                    android:layout_marginLeft="5dp"
                    android:editable="false"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_weight="2"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="Стаж водіння:"
                    android:textSize="25dp"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/abc_primary_text_disable_only_material_light"
                    android:layout_marginRight="5dp" />
                <EditText
                    android:id="@+id/drivingExp"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:hint="@string/drivingExp"
                    android:background="#f3f3f3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/abc_primary_text_disable_only_material_light"
                    android:layout_marginLeft="5dp"
                    android:editable="false"/>
            </LinearLayout>







        </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        </LinearLayout>
        <Button android:layout_width="190dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Зберегти зміни"
            android:textColor="#fff"
            android:background="@drawable/btn"
            />

    </LinearLayout>


</RelativeLayout>
